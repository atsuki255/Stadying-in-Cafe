			<div class="border border-warning" ><!-- 1つの投稿の間に感覚を入れたい -->
			<% @cafes.each do |cafe| %>
				<h4>
					<%= link_to user_path(cafe.user_id) do %>
					<%= attachment_image_tag cafe.user, :profile_image,class: "img-circle", size: "100x100", fallback: "user.png" %>
					<% end %>
					<%= cafe.user.nickname %>
				</h4>

				<h4>カフェ名</h4>
				<h4>
					<%= link_to cafe_path(cafe.id) do %>
					<%= cafe.shop_name %>
					<% end %>
				<h4>

				<!-- review(星の数) -->
      	 <div id="star-review-<%= cafe.id %>"></div>
      	  <script>
      	  $('#star-review-<%= cafe.id %>').raty({
      	    size: 36,
      	    starOff:  '<%= asset_path('star-off.png') %>',
      	    starOn : '<%= asset_path('star-on.png') %>',
      	    starHalf: '<%= asset_path('star-half.png') %>',
      	    half: true,
      	    readOnly: true,
      	    score: <%= cafe.review %>,
      	  });
      	  </script> 
      	<!-- review(星の数) -->

      	<!-- タグ付け -->
      	<div>
      		<% cafe.tags.each do |tag| %>
    				<%= tag.name %>
					<% end %> 
				</div> 
				<!-- タグ付け --> 
			<% end %>
			<%= paginate @cafes %>
			</div>