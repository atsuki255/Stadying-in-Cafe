<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render "devise/shared/sidebar" %>
		</div>


		<div class="col-lg-9">
			<h1>登録情報編集</h1>
			<%= form_for(@user, url: user_path(current_user)) do |f| %>
			
			<div class="col-lg-4">
				<%= attachment_image_tag @user, :profile_image,class: "img-circle", size: "250x250", fallback: "user.png" %>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>


			<div class="col-lg-8">
				<table class="table">
					<tr>
						<th><h4><%= f.label :ニックネーム %></h4></th>
						<th><h4><%= f.text_field :nickname %></h4></th>
					</tr>
					<tr>
						<th><h4><%= f.label :メールアドレス %></h4></th>
						<th><h4><%= f.text_field :email %></h4></th>
					</tr>
				</table><br><br>
				<%= f.submit "編集内容を保存する", class:"btn btn-success"  %>
			</div>
			<% end %>
		</div>

		<div class="col-lg-7"></div>
		<div class="col-lg-4">
			<%= link_to "パスワード変更", edit_user_registration_path, class:"btn btn-warning" %>
		</div>		
	</div>
</div>