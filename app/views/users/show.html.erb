<div class="container"><br>
	<div class="row">
		<div class="col-lg-3">
			<%= render "devise/shared/sidebar" %>
		</div>

		<div class="col-lg-9">
			<% if user_signed_in? && @user == current_user %>
  		<h1>マイページ</h1>
			<% else %>
  		<h1>ユーザーページ</h1>
			<% end %>
			<!-- 自分のページはマイページ、他の人のページはユーザーページと表示する -->
			
			<div class="col-lg-4">
				<%= attachment_image_tag @user, :profile_image,class: "img-circle", size: "250x250", fallback: "user.png" %>
			</div>

			<div class="col-lg-2"></div><!-- プロフィール写真と名前のスペースを開ける -->

			<div class="col-lg-4">
				<table class="table">
					<tr>
						<th><h4>ニックネーム</h4></th>
						<th><h4><%= @user.nickname %></h4></th>
					</tr>
					<tr>
						<th><h4>メールアドレス</h4></th>
						<th><h4><%= @user.email %></h4></th>
					</tr>
				</table>
				<% if user_signed_in? && @user == current_user %>
					<%= link_to "プロフィール編集", edit_user_path(current_user), class:"btn btn-success" %>
				<% end %>
				<!-- 自分のページ以外は編集ボタンを表示させない -->
			</div>

			<div class="col-lg-9">
				<h1>投稿一覧</h1>
				<%= render "devise/shared/cafe_index" %>
			</div>
		</div>

	</div>
</div>